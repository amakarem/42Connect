<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard - {{ app.user.displayName }}</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f8;
        }

        /* Header bar */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #2c3e50;
            color: #ecf0f1;
            padding: 1rem 2rem;
        }

        header h1 {
            margin: 0;
            font-size: 1.5rem;
        }

        header a.logout-btn {
            color: #ecf0f1;
            text-decoration: none;
            background-color: #e74c3c;
            padding: 0.5rem 1rem;
            border-radius: 5px;
        }

        header a.logout-btn:hover {
            background-color: #c0392b;
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        /* User profile card */
        .profile-card {
            display: flex;
            align-items: center;
            background-color: #fff;
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .profile-card img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 2rem;
            border: 2px solid #2c3e50;
        }

        .profile-card h2 {
            margin: 0 0 0.5rem 0;
        }

        .profile-card p {
            margin: 0.25rem 0;
            color: #555;
        }

        /* Projects dashboard */
        .projects-dashboard {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .project-group {
            background-color: #fff;
            border-radius: 10px;
            padding: 1rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

        .project-group h3 {
            margin-top: 0;
            color: #2c3e50;
            border-bottom: 2px solid #2c3e50;
            padding-bottom: 0.3rem;
        }

        .project-group ul {
            list-style: none;
            padding-left: 0;
        }

        .project-group li {
            padding: 0.5rem 0;
            border-bottom: 1px solid #eee;
        }

        .project-group li:last-child {
            border-bottom: none;
        }
    </style>
</head>
<body>
    <!-- Header Bar -->
    <header>
        <h1>42 Connect Dashboard</h1>
        <a href="{{ path('app_logout') }}" class="logout-btn">Logout</a>
    </header>

    <div class="container">
        <!-- User Profile Card -->
        <div class="profile-card">
            {% if app.user.image %}
                <img src="{{ app.user.image }}" alt="{{ app.user.displayName }}">
            {% else %}
                <img src="https://via.placeholder.com/100" alt="User Image">
            {% endif %}

            <div class="user-details">
                <h2>{{ app.user.displayName }}</h2>
                <p><strong>Email:</strong> {{ app.user.email }}</p>
                <p><strong>Intra Login:</strong> {{ app.user.intraLogin }}</p>
                <p><strong>Kind:</strong> {{ app.user.kind }}</p>
                <p><strong>Location:</strong> {{ app.user.location }}</p>
            </div>
        </div>

        <!-- Projects Dashboard -->
        <div class="projects-dashboard">
            {% set groupedProjects = {} %}

            {# Group projects by status #}
            {% for project in app.user.projects|sort((a, b) => b.retriable_at <=> a.retriable_at) %}
                {% set status = project.status|default('Unknown') %}
                {% if groupedProjects[status] is not defined %}
                    {% set groupedProjects = groupedProjects|merge({ (status): [project] }) %}
                {% else %}
                    {% set groupedProjects = groupedProjects|merge({ (status): groupedProjects[status]|merge([project]) }) %}
                {% endif %}
            {% endfor %}

            {# Display grouped projects #}
            {% for status, projects in groupedProjects %}
                <div class="project-group">
                    <h3>{{ status|capitalize }}</h3>
                    <ul>
                        {% for project in projects %}
                            <li>
                                {% set mark = project.status == 'finished' ? '‚úÖ' 
                                            : project.status == 'in_progress' ? 'üü°' 
                                            : '‚ùå' %}
                                {{ mark }} {{ project.name|default(project) }}
                                {% if project.retriable_at is defined %}
                                    <small>(Retry: {{ project.retriable_at|date('Y-m-d H:i') }})</small>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% else %}
                <p>No projects found.</p>
            {% endfor %}
        </div>

    </div>
</body>
</html>
