<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard - {{ app.user.displayName }}</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f8;
        }

        /* Header bar */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #2c3e50;
            color: #ecf0f1;
            padding: 1rem 2rem;
        }

        header h1 {
            margin: 0;
            font-size: 1.5rem;
        }

        header a.logout-btn {
            color: #ecf0f1;
            text-decoration: none;
            background-color: #e74c3c;
            padding: 0.5rem 1rem;
            border-radius: 5px;
        }

        header a.logout-btn:hover {
            background-color: #c0392b;
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        /* User profile card */
        .profile-card {
            display: flex;
            align-items: center;
            background-color: #fff;
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .profile-card img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 2rem;
            border: 2px solid #2c3e50;
        }

        .profile-card h2 {
            margin: 0 0 0.5rem 0;
        }

        .profile-card p {
            margin: 0.25rem 0;
            color: #555;
        }

        /* Projects dashboard */
        .projects-dashboard {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .project-group {
            background-color: #fff;
            border-radius: 10px;
            padding: 1rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

        .project-group h3 {
            margin-top: 0;
            color: #2c3e50;
            border-bottom: 2px solid #2c3e50;
            padding-bottom: 0.3rem;
        }

        .project-group ul {
            list-style: none;
            padding-left: 0;
        }

        .project-group li {
            padding: 0.5rem 0;
            border-bottom: 1px solid #eee;
        }

        .project-group li:last-child {
            border-bottom: none;
        }
    </style>
</head>
<body>
    <!-- Header Bar -->
    <header>
        <h1>42 Connect Dashboard</h1>
        <a href="{{ path('app_logout') }}" class="logout-btn">Logout</a>
    </header>

    <div class="container">
        <!-- User Profile Card -->
        <div class="profile-card">
            {% if app.user.image %}
                <img src="{{ app.user.image }}" alt="{{ app.user.displayName }}">
            {% else %}
                <img src="https://via.placeholder.com/100" alt="User Image">
            {% endif %}

            <div class="user-details">
                <h2>{{ app.user.displayName }}</h2>
                <p>
                <button id="toggleReady" class="btn btn-sm btn-outline-primary">
                    {% if app.user.readyToHelp %}‚úÖ Ready to Help{% else %}‚ùå Not Ready{% endif %}
                </button>
                </p>
                <p><strong>Email:</strong> {{ app.user.email }}</p>
                <p><strong>Intra Login:</strong> {{ app.user.intraLogin }}</p>
                <p><strong>Kind:</strong> {{ app.user.kind }}</p>
                <p>
                    <strong>Location:</strong> {{ app.user.location }}
                    {% if app.user.campus is not empty %}
                        {% set firstCampus = app.user.campus|first %}
                        - {{ firstCampus.name|default('Unknown') }}
                        {% if firstCampus.time_zone is defined %}
                            ({{ firstCampus.time_zone }})
                        {% endif %}
                    {% endif %}
                </p>
            </div>
        </div>

        <div>
            {% if app.user.vibe is not null %}
                <label for="originalVibe">Original Vibe:</label>
                <textarea id="originalVibe" rows="3" class="form-control">{{ app.user.vibe.originalVibe }}</textarea>
                <button id="saveOriginalVibe" class="btn btn-success mt-2">Save</button>
            {% else %}
                <div class="alert alert-warning">
                    You haven't filled your Original Vibe yet.
                </div>
                    <textarea id="originalVibe" rows="3" class="form-control"></textarea>
                    <button id="saveOriginalVibe" class="btn btn-success mt-2">Save</button>
            {% endif %}

            <div id="vibeMessage" class="mt-2"></div>
        </div>

        <!-- Projects Dashboard -->
        <div class="projects-dashboard">
            {% set groupedProjects = {} %}

            {# Group projects by status #}
            {% for project in app.user.projects|sort((a, b) => b.updated_at <=> a.updated_at) %}
                {% set status = project.status|default('Unknown') %}
                {% if groupedProjects[status] is not defined %}
                    {% set groupedProjects = groupedProjects|merge({ (status): [project] }) %}
                {% else %}
                    {% set groupedProjects = groupedProjects|merge({ (status): groupedProjects[status]|merge([project]) }) %}
                {% endif %}
            {% endfor %}

            {# Display grouped projects #}
            {% for status, projects in groupedProjects %}
                <div class="project-group">
                    <h3>{{ status|capitalize }}</h3>
                    <ul>
                        {% for project in projects %}
                            <li>
                                {% set mark = '‚ùå' %}
                                {% if project.status == 'finished' and project.final_mark is defined and project.final_mark >= 40 %}
                                    {% set mark = '‚úÖ' %}
                                {% elseif project.status == 'in_progress' %}
                                    {% set mark = 'üü°' %}
                                {% endif %}
                                {{ mark }} {{ project.name|default(project) }}
                                {% if project.final_mark is defined and project.final_mark is not null %}
                                    <span>‚Äî Mark: {{ project.final_mark }}</span>
                                {% endif %}
                                {% if project.updated_at is defined %}
                                    <small>(Updated: {{ project.updated_at|date('Y-m-d H:i') }})</small>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% else %}
                <p>No projects found.</p>
            {% endfor %}
        </div>

    </div>
</body>
</html>
<script>
document.getElementById('toggleReady').addEventListener('click', function() {
    fetch('{{ path('user_toggle_ready') }}', {
        method: 'POST',
        headers: { 'X-Requested-With': 'XMLHttpRequest' }
    })
    .then(res => res.json())
    .then(data => {
        this.textContent = data.readyToHelp ? '‚úÖ Ready to Help' : '‚ùå Not Ready';
    });
});

document.getElementById('saveOriginalVibe').addEventListener('click', function() {
    const vibe = document.getElementById('originalVibe').value;

    fetch('{{ path('user_update_original_vibe') }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
            'X-Requested-With': 'XMLHttpRequest',
            'X-CSRF-TOKEN': '{{ csrf_token('update_original_vibe') }}'
        },
        body: new URLSearchParams({originalVibe: vibe})
    })
    .then(response => response.json())
    .then(data => {
        const msg = document.getElementById('vibeMessage');
        if (data.success) {
            msg.innerHTML = '<span class="text-success">Saved successfully!</span>';
        } else {
            msg.innerHTML = '<span class="text-danger">Error saving.</span>';
        }
    })
    .catch(() => {
        document.getElementById('vibeMessage').innerHTML = '<span class="text-danger">Error saving.</span>';
    });
});
</script>
